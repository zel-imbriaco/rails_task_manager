<form action="/tasks" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new task:</p>
  <input type='text' name='task[title]' placeholder='Title'/><br/>
  <textarea name='task[description]' placeholder='description'></textarea><br/>
  <input type='submit'/>
</form>